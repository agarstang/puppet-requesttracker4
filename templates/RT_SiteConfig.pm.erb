# GENERATED BY PUPPET
# RT:
my $zone = "<%= @tz %>";
Set($Timezone, $zone);

Set($rtname, '<%= @rtname %>');
Set($Organization, '<%= @org %>');

Set($CorrespondAddress , '<%= @corraddr %>');
Set($FriendlyFromLineFormat, '"<%= @fromline %>" <<%= @corraddr %>>');

# THE WEBSERVER:

Set($WebPath , "<%= @webpath %>");
Set($WebBaseURL , "<%= @baseurl %>");

# THE DATABASE:
# map database types to their names as known by RT
my %typemap = (
    mysql   => 'mysql',
    pgsql   => 'Pg',
    sqlite3 => 'SQLite',
);

Set($DatabaseType, $typemap{<%= @rt_dbtype %>} || "UNKNOWN");

Set($DatabaseHost, '<%= @rt_dbhost %>');
Set($DatabasePort, '<%= @rt_dbport %>');

Set($DatabaseUser , '<%= @rt_dbuser %>');
Set($DatabasePassword , '<%= @rt_dbpass %>');

# SQLite needs a special case, since $DatabaseName must be a full pathname
my $dbc_dbname = '<%= @rt_dbname %>'; if ( "" eq "sqlite3" ) { Set ($DatabaseName, '' . '/' . $dbc_dbname); } else { Set ($DatabaseName, $dbc_dbname); }

# Stop large message getting hidden
Set($MaxInlineBody, 0); 

#Postgres Index enabled
Set( %FullTextSearch,
    Enable     => 1,
    Indexed    => 1,
    Column     => 'ContentIndex',
    Table      => 'Attachments',
);

1;
